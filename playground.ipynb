    "# \n",
    "\n",
    "import torch\n",
    "x = torch.zeros(768)\n",
    "n = 100  # 100 layers\n",
    "for i in range(n):\n",
    "    x +=  n ** -0.5 * torch.randn(768)\n",
    "\n",
    "print(x.std())"
   ]
